<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account.LoginActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/color_white">

    <View
        android:id="@+id/login_shape_background"
        android:layout_width="377dp"
        android:layout_height="253dp"
        android:background="@drawable/shape_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_reset_password_verify_otp"
        android:layout_width="338dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/login_button"
        app:layout_constraintBottom_toBottomOf="@+id/login_shape_background"
        app:layout_constraintEnd_toEndOf="@+id/login_shape_background"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/login_shape_background"
        android:text="Verify"
        android:gravity="center"
        android:textSize="@dimen/_20ssp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/color_search_icon"/>


    <EditText
        android:id="@+id/et_reset_password_otp"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:hint="Enter OTP here"
        android:outlineProvider="none"
        android:textColor="@color/color_black"
        android:textColorHint="#C4C4C4"
        android:textCursorDrawable="@color/color_black"
        app:layout_constraintBottom_toTopOf="@+id/btn_reset_password_verify_otp"
        app:layout_constraintEnd_toEndOf="@+id/login_shape_background"
        app:layout_constraintStart_toStartOf="@+id/login_shape_background"
        app:layout_constraintTop_toTopOf="@+id/login_shape_background"
        app:layout_constraintVertical_bias="0.65" />

    <TextView
        android:id="@+id/tv_reset_password_resend_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Re-send OTP"
        android:textColor="#F8A201"
        app:layout_constraintBottom_toTopOf="@+id/btn_reset_password_verify_otp"
        app:layout_constraintStart_toStartOf="@+id/et_reset_password_otp"
        app:layout_constraintTop_toBottomOf="@+id/et_reset_password_otp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Verification"
        android:textColor="@color/color_quick_actions_background"
        android:textSize="@dimen/_25sdp"
        app:layout_constraintBottom_toTopOf="@+id/et_reset_password_otp"
        app:layout_constraintEnd_toEndOf="@+id/login_shape_background"
        app:layout_constraintStart_toStartOf="@+id/login_shape_background"
        app:layout_constraintTop_toTopOf="@+id/login_shape_background" />

</androidx.constraintlayout.widget.ConstraintLayout>
