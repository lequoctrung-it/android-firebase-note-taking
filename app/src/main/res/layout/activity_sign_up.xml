<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account.LoginActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/color_white">

    <View
        android:id="@+id/login_shape_background"
        android:layout_width="378dp"
        android:layout_height="418dp"
        android:background="@drawable/shape_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_signup"
        android:layout_width="338dp"
        android:layout_height="50dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Sign Up"
        android:inputType="textEmailAddress"
        android:textColor="@color/color_search_icon"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintBottom_toBottomOf="@+id/login_shape_background"
        app:layout_constraintEnd_toEndOf="@+id/login_shape_background"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/login_shape_background" />

    <EditText
        android:id="@+id/et_signup_email_phone"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:hint="Email/Phone Number"
        android:outlineProvider="none"
        android:textColor="@color/color_black"
        android:textColorHint="#C4C4C4"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="@color/color_black"
        app:layout_constraintBottom_toTopOf="@+id/et_signup_password"
        app:layout_constraintEnd_toEndOf="@+id/login_shape_background"
        app:layout_constraintStart_toStartOf="@+id/login_shape_background"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <EditText
        android:id="@+id/et_signup_password"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:outlineProvider="none"
        android:textColor="@color/color_black"
        android:textColorHint="#C4C4C4"
        android:textCursorDrawable="@color/color_black"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/et_signup_reenter_password"
        app:layout_constraintEnd_toEndOf="@+id/login_shape_background"
        app:layout_constraintStart_toStartOf="@+id/login_shape_background"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_email_phone"
        app:layout_constraintVertical_bias="0.924" />

    <EditText
        android:id="@+id/et_signup_reenter_password"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:hint="Re-enter Password"
        android:outlineProvider="none"
        android:textColor="@color/color_black"
        android:textColorHint="#C4C4C4"
        android:textCursorDrawable="@color/color_black"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/btn_signup"
        app:layout_constraintEnd_toEndOf="@+id/login_shape_background"
        app:layout_constraintStart_toStartOf="@+id/login_shape_background"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_password" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Login"
        android:textColor="#F8A201"
        app:layout_constraintBottom_toBottomOf="@+id/login_shape_background"
        app:layout_constraintEnd_toEndOf="@+id/btn_signup"
        app:layout_constraintStart_toStartOf="@+id/btn_signup"
        app:layout_constraintTop_toBottomOf="@+id/btn_signup"
        android:textSize="@dimen/_15sdp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Welcome"
        android:textColor="@color/color_quick_actions_background"
        android:textSize="@dimen/_25sdp"
        app:layout_constraintBottom_toTopOf="@+id/btn_signup"
        app:layout_constraintEnd_toEndOf="@+id/login_shape_background"
        app:layout_constraintStart_toStartOf="@+id/login_shape_background"
        app:layout_constraintTop_toTopOf="@+id/login_shape_background"
        app:layout_constraintVertical_bias="0.165" />

</androidx.constraintlayout.widget.ConstraintLayout>

