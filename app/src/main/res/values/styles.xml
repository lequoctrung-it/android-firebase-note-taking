<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorSurface">@color/color_grey</item>

    </style>
    <!-- Theme for Material Time Picker - default for app -->
    <style name="AppTheme.MaterialTimePickerTheme" parent="ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">@color/color_grey</item>
        <item name="colorSurface">@color/color_grey</item>
    </style>
</resources>